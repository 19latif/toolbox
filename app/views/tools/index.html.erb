<h1>List of Tools</h1>
<div class="container">

  <% @tools.each do |tool| %>
    <div class="card-product">
      <img src="<%= tool.image_url %>" />
      <div class="card-product-infos">
        <h2><%= tool.name %></h2>
        <p><%= tool.price.round(1) %></p>
        <p><%= link_to "tools", tool_path(tool)%></p>
      </div>
    </div>

  <% end %>
</div>
