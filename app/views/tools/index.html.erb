
<h1>List of Tools</h1>
<div class="container">
  <div class="card-container">
    <% @tools.each do |tool| %>
      <%= link_to tool_path(tool), class: "card" do %>
        <img src="<%= tool.image_url %>" class="card-img-top" alt="<%= tool.name %>">
        <div class="card-body">
          <h5 class="card-title"><%= tool.name %></h5>
          <p class="card-text"><%= tool.price.round(1) %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
