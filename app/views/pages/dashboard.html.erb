
<div class="container my-4 py-2 ">
  <h1>Dashboard</h1>

  <h2>Upcoming Bookings</h2>
  <% @bookings.each do |booking| %>
    <div class="card p-4 my-3">
      <div class="d-flex justify-content-between 100w p-4 my-3">
        <p>Hooray! You've booked a <%= booking.tool.name %> from <%= booking.tool.user.firstname %></p>
        <img class="avatar-bordered" alt="avatar-bordered" src="https://media.istockphoto.com/id/1337144146/de/vektor/standard-avatar-profilsymbolvektor.jpg?s=170667a&w=0&k=20&c=P_OBjasv808q0FKQky9KwCnApsblnOd_gOaQfnzwLnE=">
      </div>
      <div class="d-flex justify-content-between 100w p-4 my-3">
        <div class="tool-img-container">
          <img src= <%= booking.tool.image_url%> class="tool-img">
        </div>
        <div class="container">
          <p><strong>Starting from:</strong><%= booking.start_date %></p>
          <p><strong>Until:</strong><%= booking.end_date %></p>
        </div>
        <div class="card">
          <p>Price per day:</p>
        </div>
      </div>
    </div>
  <% end %>

  <h2>Your offered tools</h2>

  <div class="row">
    <% @tools.each do |tool| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <%= link_to tool_path(tool), class: "card h-100" do %>
          <img src="<%= tool.image_url %>" class="card-img-top" alt="<%= tool.name %>">
          <div class="card-body d-flex justify-content-between">
            <h5 class="card-title"><%= tool.name %></h5>
            <h5 class="card-title"><%= tool.city %></h5>
            <p class="card-text"><%= number_to_currency(tool.price, unit: "â‚¬", separator: ",") %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <h2>Who booked your tools?</h2>

  <% if @received_bookings.present? %>
    <% @received_bookings.each do |booking| %>
      <div class="card p-4 my-3">
        <p><%= booking.user.firstname %> booked a <%= booking.tool.name %> from you!</p>
        <div class="container">
          <p><strong>Starting from:</strong><%= booking.start_date %></p>
          <p><strong>Until:</strong><%= booking.end_date %></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card p-4 my-3">
      <p>Currently nobody has booked your tools.</p>
    </div>
  <% end %>
</div>
